{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "module": "es2020",
    "moduleResolution": "node",
    "types": ["keycloak-js"],
    "skipLibCheck": true,    // âœ… this suppresses Keycloak typing issues
    "importHelpers": true,
    "target": "ES2022",
    "lib": ["es2020", "dom"],
    "useDefineForClassFields": false
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
